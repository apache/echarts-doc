{
  "name": "echarts-doc",
  "version": "0.0.1",
  "description": "Documentation of Apache ECharts",
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/echarts-doc"
  },
  "scripts": {
    "build": "node build/build-doc.js --env asf",
    "watch": "node build/build-doc.js --env dev --watch",
    "localsite": "node build/build-doc.js --env localsite",
    "build:site": "webpack --config build/webpack.config.js --mode production",
    "watch:site": "webpack --config build/webpack.config.js --mode development --devtool inline-source-map --watch",
    "server": "node server.js",
    "format": "node tool/format.js",
    "dev": "npx concurrently --kill-others \"npm:watch\" \"npm:watch:site\" \"npm:server\""
  },
  "license": "Apache License 2.0",
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-loader": "^8.1.0",
    "chalk": "^3.0.0",
    "chokidar": "^4.0.3",
    "concurrently": "^7.4.0",
    "copy-dir": "^0.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^3.5.3",
    "file-loader": "^6.2.0",
    "fs-extra": "^8.1.0",
    "globby": "^11.0.1",
    "htmlparser2": "^4.1.0",
    "lodash": "^4.17.21",
    "marked": "^0.3.19",
    "mini-css-extract-plugin": "^2.9.2",
    "node-static": "git+https://github.com/cloudhead/node-static.git",
    "open": "^8.4.0",
    "prettier": "3.6.2",
    "sass.js": "^0.11.1",
    "sassjs-loader": "^2.0.0",
    "vue": "^3.5.22",
    "vue-loader": "^17.4.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^4.10.0",
    "yargs": "^14.2.3"
  },
  "dependencies": {
    "codemirror": "^5.54.0",
    "highlight.js": "^9.18.1",
    "lodash-es": "^4.17.21",
    "lz-string": "^1.4.4",
    "mark.js": "^8.11.1",
    "scroll-into-view": "^1.16.2",
    "string-similarity-js": "^2.1.4",
    "vanilla-lazyload": "^12.5.1",
    "vue-i18n": "^11.1.12",
    "zrender": "^5.4.0"
  }
}
